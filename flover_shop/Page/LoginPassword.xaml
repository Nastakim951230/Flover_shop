<Window x:Class="flover_shop.Page.LoginPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flover_shop.Page"
        mc:Ignorable="d"
        Title="Изменение логина и пароля" Height="120" Width="200">
    <Grid Background="#FFF7F9CF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center" Grid.ColumnSpan="2">

            <Button Name="btnLogin" Click="btnLogin_Click">Поменять логин</Button>
            <Button Name="btnPassword" Click="btnPassword_Click">Поменять пароль</Button>
            <Button Name="next" Click="next_Click">Назад</Button>
        </StackPanel>

    </Grid>
</Window>
