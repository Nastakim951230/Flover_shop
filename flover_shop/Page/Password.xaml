<Window x:Class="flover_shop.Page.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flover_shop.Page"
        mc:Ignorable="d"
        Title="Изменение Пароля" Height="220" Width="350">
    <Grid  Background="#FFF7F9CF">
        <ScrollViewer>
            <StackPanel>
                <GroupBox Header="Введите Старый пароль">
                    <TextBox Name="tbStParol"></TextBox>
                </GroupBox>
                <GroupBox Header="Введите новый пароль">
                    <PasswordBox Name="tbNewParol"></PasswordBox>
                </GroupBox>
                <GroupBox Header="Повторите новый пароль">
                    <PasswordBox Name="tbNew2Parol"></PasswordBox>
                </GroupBox>
                <StackPanel VerticalAlignment="Center">
                    <Button Name="btnPassword" Click="btnPassword_Click">Сохранить</Button>
                    <Button Name="next" Click="next_Click">Назад</Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
